<div class="container">
  <div class="card" style="height: 500px; widht: 100%; padding: 10px">
    <div class="card-text">
      <h1> Post </h1>
      <p>
        <b>Name: </b>
        <%= @post.name %>
      </p>
      <p>
        <b>Content: </b>
        <%= @post.content %>
      </p>
      <p>
        <b>Created_At</b>
        <%= @post.created_at.strftime("%m-%d-%Y")%>
      </p>
      <div>
        <% @post.comments %>
      </div>
      <h2>Add a Comment</h2>
      <%= form_for ([@post, @post.comments.build]) do  |f| %>
      <p>
        <%= f.label :Body %>
        <%= f.text_area :body %>
      </p>
      <p>
        <%= f.submit "Submit" %>
      </p>
      <% end %>
    </div>
  </div>
</div>